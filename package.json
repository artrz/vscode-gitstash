{
    "name": "gitstash",
    "displayName": "Git Stash",
    "description": "Explorer | Diff | Commands",
    "version": "0.5.0",
    "publisher": "arturock",
    "license": "MIT",
    "icon": "resources/logo.png",
    "galleryBanner": {
        "color": "#444444",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.13.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "git",
        "stash",
        "git stash",
        "diff",
        "stash diff"
    ],
    "homepage": "https://github.com/arturock/vscode-gitstash/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/arturock/vscode-gitstash.git"
    },
    "bugs": {
        "url": "https://github.com/arturock/vscode-gitstash/issues"
    },
    "main": "./out/src/extension",
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "commands": [
            {
                "command": "gitstash.stash",
                "title": "Stash...",
                "category": "GitStash"
            },
            {
                "command": "gitstash.popReindex",
                "title": "Stash Pop and reindex...",
                "category": "GitStash"
            },
            {
                "command": "gitstash.apply",
                "title": "Stash Apply...",
                "category": "GitStash"
            },
            {
                "command": "gitstash.branch",
                "title": "Stash Branch...",
                "category": "GitStash"
            },
            {
                "command": "gitstash.drop",
                "title": "Stash Drop...",
                "category": "GitStash"
            },
            {
                "command": "gitstash.clear",
                "title": "Stash Clear",
                "category": "GitStash"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Git Stash configuration",
            "properties": {
                "gitstash.explorer.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enables or disables the stash tree"
                },
                "gitstash.entryFormat": {
                    "type": "string",
                    "default": "[${index}: ${branch}] ${description}",
                    "description": "Specifies the format for each stash entry\nAvailable tokens:\n${branch} - the branch where the stash was created\n${description} - the custom or default description for the stash entry\n${date} - the stash creation date\n${index} - the stash index"
                },
                "gitstash.fileFormat": {
                    "type": "string",
                    "default": "${filename}",
                    "description": "Specifies the format for each stashed file\nAvailable tokens:\n${filename} - the file name\n${filepath} - the file path\n${index} - the file index"
                },
                "gitstash.diffTitleFormat": {
                    "type": "string",
                    "default": "${branch} - ${filename}",
                    "description": "Specifies the format for the diff document title\nAvailable tokens:\n${filename} - the file name\n${filepath} - the file path\n${fileIndex} - the file index\n${date} - the entry date\n${description} - the entry description\n${branch} - the entry branch\n${stashIndex} - the entry index"
                },
                "gitstash.dateFormat": {
                    "type": "string",
                    "default": "default",
                    "enum": [
                        "default",
                        "iso",
                        "local",
                        "raw",
                        "relative",
                        "rfc",
                        "short"
                    ],
                    "description": "Specifies the date format for each stash entry\nAvailable formats:\ndefault\niso\nlocal\nraw\nrelative\nrfc\nshort"
                }
            }
        },
        "views": {
            "explorer": [
                {
                    "id": "gitstash.explorer",
                    "name": "Git Stash",
                    "when": "isGitRepository && config.gitstash.explorer.enabled"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "tmp": "0.0.33"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "*",
        "@types/tmp": "0.0.33",
        "tslint": "5.7.0",
        "typescript": "2.5.2",
        "vscode": "1.1.5"
    }
}
